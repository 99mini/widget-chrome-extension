{
  "name": "widget-chrome-extension",
  "version": "0.1.0-alpha.1",
  "author": "99mini",
  "description": "new tab widget chrome extension",
  "main": "index.html",
  "type": "module",
  "homepage": "https://github.com/99mini/widget-chrome-extension",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "lint": "eslint src/**/*.ts?(x)",
    "format": "prettier --write src/**/*.ts?(x)",
    "format:check": "prettier --check src/**/*.ts?(x)",
    "tsc": "tsc --noEmit",
    "check": "yarn lint && yarn format && yarn tsc",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "build": "sh ./.scripts/build.sh",
    "build:prod": "yarn check && yarn test && sh ./.scripts/build.sh production",
    "build:stage": "yarn check && yarn test && sh ./.scripts/build.sh staging"
  },
  "dependencies": {
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@radix-ui/react-context-menu": "^2.2.4",
    "@radix-ui/react-popover": "^1.1.4",
    "@radix-ui/react-select": "^2.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "es-toolkit": "^1.26.1",
    "lucide-react": "^0.468.0",
    "react": "^18.3.1",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.6.3",
    "zustand": "^5.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@testing-library/jest-dom": "^6.6.2",
    "@testing-library/react": "^16.0.1",
    "@trivago/prettier-plugin-sort-imports": "^5.2.0",
    "@types/chrome": "^0.0.279",
    "@types/node": "^22.10.1",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "@vitejs/plugin-react": "^4.3.3",
    "@vitest/coverage-v8": "2.1.3",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.1",
    "eslint-plugin-react-hooks": "^5.0.0",
    "globals": "^15.11.0",
    "jsdom": "^25.0.1",
    "postcss": "^8.4.49",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.16",
    "typescript-eslint": "^8.11.0",
    "vite": "^5.4.9",
    "vitest": "^2.1.3"
  },
  "packageManager": "yarn@4.2.2"
}
